<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dip" >
 
    <CheckBox android:id="@+id/buddyStar" 
        style="?android:attr/starStyle"
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:layout_marginTop="3dip"
        android:layout_gravity="top" />              

    <ImageView
        android:id="@+id/buddyState"
        android:layout_width="35dip"
        android:layout_height="35dip"
        android:layout_marginTop="3dip"
        android:src="@drawable/buddy_available"
        android:scaleType="centerInside"
        android:paddingLeft="10dip" />
    
    <LinearLayout 
        android:id="@+id/buddyInfo"
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="10dip">
     
        <TextView android:id="@+id/buddyName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="user name"
            android:textSize="15dip"
            android:textStyle="bold" />
    
        <TextView android:id="@+id/buddyStatus"
            android:text="user current status"
            android:textSize="13dip"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip" />
        
    </LinearLayout>
    
    <View
        android:layout_width="0.3dip"
        android:layout_height="30dip"
        android:layout_gravity="center"
        android:background="#303030"
        android:layout_marginLeft="5dip"/>
    
    <ImageView
        android:id="@+id/buddyToDelete"
        android:background="@drawable/buddy_blocked"
        android:layout_width="40dip"
        android:layout_height="40dip"
        android:scaleType="centerInside"
        android:layout_gravity="center_vertical"
        android:padding="5dip" />

</LinearLayout>