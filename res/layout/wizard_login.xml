<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.googlecode.gtalksms"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    >
    <LinearLayout 
        android:id="@+id/linearLayout1" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:orientation="vertical" 
        android:layout_weight="10"
        >
        
        <TextView 
            android:text="@string/wizard_login_text" 
            android:gravity="top|left" 
            android:layout_width="fill_parent" 
            android:layout_weight="0" 
            android:layout_height="100dip"
            />
        <TextView 
            android:text="@string/wizard_login_login" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            />
        <EditText 
            android:id="@+id/login" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            />
        <TextView 
            android:text="@string/wizard_login_password" 
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content"
            />
        <EditText 
            android:id="@+id/password" 
            android:inputType="textPassword" 
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            />
    </LinearLayout>
    
    <LinearLayout 
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" 
        android:layout_weight="1"
        >
        
        <Button 
            android:text="@string/wizard_login_back_button" 
            android:id="@+id/backBut"
            android:layout_height="40dp" 
            android:layout_width="fill_parent" 
            android:layout_weight=".5"
            android:fitsSystemWindows="true" 
            android:gravity="center" 
            android:layout_gravity="center"
            /> 
        
        <Button 
            android:text="@string/wizard_login_login_button" 
            android:id="@+id/loginBut"
            android:layout_height="40dp" 
            android:layout_width="fill_parent" 
            android:layout_weight=".5"
            android:fitsSystemWindows="true" 
            android:gravity="center" 
            android:layout_gravity="center"
            /> 
            
    </LinearLayout>
    
    <TextView 
        android:layout_gravity="bottom" 
        android:text="Version X.X.X @Yakooo" 
        android:gravity="bottom|right" 
        android:id="@+id/VersionLabel" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" android:layout_weight="0"/>

</LinearLayout>